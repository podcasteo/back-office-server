{
  "check-coverage": true,
  "per-file": true,
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80,
  "exclude":[
    "src/app.js",
    "src/**/*index.js",
    "src/**/*.spec.js",
    "src/**/*.unit.js",
    "src/**/fixtures/*",
    "src/services/*",
    "src/modules/**/client/*"
  ],
  "include": [
   "src/**"
  ],
  "reporter": [
    "lcov",
    "text-summary",
    "html"
  ],
  "require": [
    "babel-register"
  ],
  "cache": true,
  "all": true,
  "report-dir": "./coverage"
}
